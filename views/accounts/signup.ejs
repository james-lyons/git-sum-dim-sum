<% include ../partials/_head.ejs %>
<% include ../partials/_nav.ejs %>

<section class="signup">
    <div class="container">
        <form method="POST" action="/accounts/signup">
            <div class="form-group">
                <label class="signup" for="name">Name</label>
                <input class="signup" type="text" id="name" name="name" placeholder="Name" autofocus/>
            </div>
            <div class="form-group">
                <label class="signup" for="email">Email</label>
                <input class="signup" type="email" id="email" name="email" placeholder="Email"/>
            </div>
            <div class="form-group">
                <label class="signup" for="password">Password</label>
                <input class="signup" type="password" id="password" name="password" placeholder="Password"/>
            </div>
            <div class="form-group">
                <label class="signup" for="password">Confirm Your Password</label>
                <input class="signup" type="password" id="password2" name="password2" placeholder="Password"/>
            </div>
            <input type="submit" value="Sign Me Up!"/>           
        </form>
    </div>
</section>

